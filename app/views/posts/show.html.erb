<p id="notice"><%= notice %></p>

<div class="container-fluid">

<p>
  <% if @post.image.present? %>
    <%= image_tag @post.image_url %>
    <%= @post.description %>
    <strong><%= current_user.email %></strong>
  <% end %>
</p>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
